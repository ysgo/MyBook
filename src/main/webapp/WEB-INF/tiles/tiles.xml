<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	  <!-- Header / Footer가 제외된 화면 -->
    <definition name="login-base" template="/WEB-INF/tiles/users/base.jsp">
    	<put-attribute name="head" value="/WEB-INF/tiles/users/head.jsp" />
    	<put-attribute name="script" value="/WEB-INF/tiles/users/script.jsp" />
      <put-attribute name="body" value="" />	
    </definition>

    <definition name="users/*" extends="login-base">
        <put-attribute name="body" value="/WEB-INF/jsp/users/{1}.jsp" />
    </definition>
    
    <definition name="error/*" extends="login-base">
        <put-attribute name="body" value="/WEB-INF/tiles/error/{1}.jsp" />
    </definition>
    
    <!-- Header / Footer가 들어간 기본 화면 -->
    <definition name="book-base" template="/WEB-INF/tiles/layout/base.jsp">
        <put-attribute name="head" value="/WEB-INF/tiles/layout/head.jsp" />
        <put-attribute name="logo" value="/WEB-INF/tiles/layout/logo.jsp" />
        <put-attribute name="sidebar" value="/WEB-INF/tiles/layout/sidebar.jsp" />
        <put-attribute name="login" value="/WEB-INF/tiles/layout/login.jsp" />
        <put-attribute name="script" value="/WEB-INF/tiles/layout/script.jsp" />
        <put-attribute name="body" value="" />
    </definition>

    <definition name="books/*" extends="book-base">
        <put-attribute name="body" value="/WEB-INF/jsp/books/{1}.jsp" />
    </definition>
</tiles-definitions>